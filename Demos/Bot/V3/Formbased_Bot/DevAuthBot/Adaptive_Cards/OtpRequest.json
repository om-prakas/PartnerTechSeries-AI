{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [

    {
      "type": "Image",
      "url": "https://esbtr.onlinesbi.com/ESBTR1/images/sbiLogo.gif",
      "size": "auto"
    },

    {
      "type": "TextBlock",
      "text": "OTP Mobile Number Registration",
      "size": "medium"

    },
    {
      "type": "TextBlock",
      "text": "Please enter Mobile Number which you would like to register for OTP(One Time Password)",
      "size": "small",
      "wrap": true

    },
    {
      "type": "Input.Text",
      "placeholder": "XXXXXXXXXX",
      "style": "text",
      "maxLength": 0,
      "id": "otp_data"
    }

  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit",
      "data": {
        "id": "submit_otp"
      }

    },
    {
      "type": "Action.Submit",
      "title": "Cancel",
      "data": {
        "id": "submit_otp_cancel"
      }

    }
  ]
}