{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [

    {
      "type": "Image",
      "url": "https://www.kotak.com/content/dam/Kotak/herosliderbanner/Immediate-Payments.png",
      "size": "auto"
    },

    {
      "type": "TextBlock",
      "text": "Forgot Password",
      "size": "large",
      "weight": "bolder"
    },
    {
      "type": "TextBlock",
      "text": "Enter User ID (CRN) or Net Banking Nickname",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "FP_userid"

    },
    {
      "type": "TextBlock",
      "text": "Registered Mobile Number.",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "FP_mobilenumber"

    },
    {
      "type": "TextBlock",
      "text": "Registered Email ID.",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "FP_emailid"

    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit",
      "data": {
        "id": "submit_forgotpassword"
      }
    },
    {
      "type": "Action.Submit",
      "title": "Cancel",
      "data": {
        "id": "submit_forgotpassword_cancel"
      }
    }
  ]
}

